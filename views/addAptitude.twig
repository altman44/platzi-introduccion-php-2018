{% extends "layout.twig" %}

{% block head %}

	<link rel="stylesheet" href="/styles/form.css" type="text/css">

{% endblock head %}

{% block content %}

	<div class="form-wrapper">
		<p class="main-title">Add Aptitude</p>
		<form action="/aptitudes/add" method="POST" class="form" enctype="multipart/form-data">
			<div class="form-group">
				<label for="aptitude-name" class="form-label">
					Name
				</label>
				<input id="aptitude-name" name="name" type="text" class="form-field" autocomplete="off">
			</div>
			<div class="form-group">
				<label class="form-label">
					Important
					<input type="checkbox" name="important" id="aptitude-important"/>
				</label>
			</div>
			<div class="form-group">
				<label class="form-label">Logo</label>
				<label class="label-file form-field">
					Subir archivo
					<span class="span-filename"></span>
					<input accept="image/*" type="file" name="logo" class="form-field" onchange="getFilename(this.value)"/>
				</label>
			</div>
			<div class="form-group">
				<input type="submit" value="Save" class="button button-submit" data-bg-color="bg-primary">
			</div>
			<div class="form-group">
				<p class="response-message" data-type="{{ responseMessage.type }}">{{ responseMessage.text }}</p>
			</div>
		</form>
	</div>

{% endblock content %}

{% block scripts %}
	<script>
		function getFilename(inputValue) {
const filename = inputValue.split('\\').pop();
document.querySelectorAll('.span-filename').forEach(spanFilename => {
spanFilename.innerHTML = '<br/>' + filename;
})
}
	</script>
{% endblock scripts %}
