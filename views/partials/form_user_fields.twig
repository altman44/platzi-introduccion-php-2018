{% block head %}

	<link rel="stylesheet" href="{{ defaultURL }}/styles/form.css" type="text/css"/>

{% endblock head %}

<form action="{{ defaultURL }}/{{ actionForm }}" method="POST" class="form">
	<div class="form-group">
		<p class="response-message" data-type="{{ responseMessage.type }}">{{ responseMessage.text }}</p>
	</div>
	<div class="form-group">
		<label class="form-label">User</label>
		<input name="username" class="form-field" autocomplete="off"/>
	</div>
	<div class="form-group">
		<label class="form-label">Password</label>
		<input name="password" type="password" class="form-field" autocomplete="off"/>
	</div>
	{% if action == 'register' %}
		<div class="form-group">
			<label class="form-label">Privileges</label>
			<select name="privilege" class="form-field form-select select-privileges">
				{% for privilege in privileges %}
					<option>{{ privilege.name }}</option>
				{% endfor %}
			</select>
		</div>
	{% endif %}
	<div class="form-group">
		<input type="submit" class="button button-submit" value="{{ actionTextToEntry }}" data-bg-color="bg-primary"/>
	</div>
</form>
